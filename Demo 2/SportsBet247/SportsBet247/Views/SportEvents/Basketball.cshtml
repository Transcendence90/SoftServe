@model SportsBet247.ViewModels.SportEventsViewModel

@{
    this.ViewData["Title"] = "Basketball events";
}

<div class="text-center font-weight-bold btn-secondary">
    <table class="table">
        <thead class="btn-success">
            <tr>
                <th>Home team</th>
                <th>Odd</th>
                <th>Point difference</th>
                <th>Away team</th>
                <th>Odd</th>
                <th>Point difference</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var basketballEvent in Model.SportEvents)
            {
            <tr class="table-striped col-md-12">
                <td>
                    @basketballEvent.HomeTeamName
                </td>
                <td class="btn-warning">
                    @basketballEvent.HomeTeamOddView
                </td>
                <td class="btn-warning">
                    +@basketballEvent.PointDifference
                </td>
                <td>
                    @basketballEvent.AwayTeamName
                </td>
                <td class="btn-warning">
                    @basketballEvent.AwayTeamOddView
                </td>
                <td class="btn-warning">
                    +@basketballEvent.PointDifference
                </td>
                <td>
                    @basketballEvent.PlayedOn
                </td>
            </tr>
            }
    </table>
</div>
