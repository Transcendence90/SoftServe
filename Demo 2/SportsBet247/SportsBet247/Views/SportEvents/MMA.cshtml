@model SportsBet247.ViewModels.SportEventsViewModel

@{
    this.ViewData["Title"] = "MMA events";
}

<div class="text-center font-weight-bold btn-secondary">
    <table class="table">
        <thead class="btn-success">
            <tr>
                <th>Home team</th>
                <th>Odd</th>
                <th>Away team</th>
                <th>Odd</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mmaEvent in Model.SportEvents)
            {
                <tr class="table-striped col-md-12">
                    <td>
                        @mmaEvent.HomeTeamName
                    </td>
                    <td class="btn-warning">
                        @mmaEvent.HomeTeamOddView
                    </td>
                    <td>
                        @mmaEvent.AwayTeamName
                    </td>
                    <td class="btn-warning">
                        @mmaEvent.AwayTeamOddView
                    </td>
                    <td>
                        @mmaEvent.PlayedOn
                    </td>
                </tr>
            }
    </table>
</div>
